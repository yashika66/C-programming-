#include <stdio.h>

int main() {
    int marks[5];       
    int sum = 0;        
    float average;      

    for(int i = 0; i < 5; i++) {
        printf("Enter marks for student %d: ", i + 1);
        scanf("%d", &marks[i]);
        sum += marks[i];   
    }

    average = sum / 5.0;  // Divide by 5.0 to get float result

    printf("Average marks of 5 students: %.2f\n", average);

    return 0;
}
output
Enter marks for student 1: 80
Enter marks for student 2: 75
Enter marks for student 3: 90
Enter marks for student 4: 85
Enter marks for student 5: 70