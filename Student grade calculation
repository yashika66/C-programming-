#include <stdio.h>

int main() {
    int marks;
    char grade;

    // Input marks
    printf("Enter the marks of the student (0-100): ");
    scanf("%d", &marks);

    // Check validity
    if(marks < 0 || marks > 100) {
        printf("Invalid marks entered.\n");
        return 0;
    }

    // Calculate grade
    if(marks >= 90) {
        grade = 'A';
    } else if(marks >= 80) {
        grade = 'B';
    } else if(marks >= 70) {
        grade = 'C';
    } else if(marks >= 60) {
        grade = 'D';
    } else {
        grade = 'F';
    }

    // Display result
    printf("Marks: %d, Grade: %c\n", marks, grade);

    return 0;
}
output
Marks: 85, Grade: B