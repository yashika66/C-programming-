#include <stdio.h>

int main() {
    int a;
    float b;
    double c;
    char d;

    printf("Size of int variable = %lu bytes\n", sizeof(a));
    printf("Size of float variable = %lu bytes\n", sizeof(b));
    printf("Size of double variable = %lu bytes\n", sizeof(c));
    printf("Size of char variable = %lu byte\n", sizeof(d));

    return 0;
}
output
Size of int variable = 4 bytes
Size of float variable = 4 bytes
Size of double variable = 8 bytes
Size of char variable = 1 byte