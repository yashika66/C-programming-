#include <stdio.h>

int main() {
    float num1, num2, result;

    // Input two numbers
    printf("Enter numerator: ");
    scanf("%f", &num1);
    printf("Enter denominator: ");
    scanf("%f", &num2);

    // Check for division by zero
    if(num2 == 0) {
        printf("Error: Division by zero is not allowed.\n");
        return 0;
    }

    // Perform division
    result = num1 / num2;

    // Display result
    printf("%.2f / %.2f = %.2f\n", num1, num2, result);

    return 0;
}
output
Enter numerator: 50
Enter denominator: 5
50.00 / 5.00 = 10.00
