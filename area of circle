#include <stdio.h>

#define PI 3.14159  // Define value of pi

int main() {
    float radius, area;

    // Input radius
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate area
    area = PI * radius * radius;

    // Display result
    printf("Area of the circle with radius %.2f is %.2f\n", radius, area);

    return 0;
}
Area of the circle with radius 5.00 is 78.54